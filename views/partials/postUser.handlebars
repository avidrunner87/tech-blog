<div id="postUser" class="modal">
    <div class="modal-content">
        <h4>ACTION Post</h4>
        <p>Please complete the form below and click the create button.</p>
        <form class="col s12 event-form">
            <div class="row">
                <div class="input-field col s10 offset-s1">
                    <input id="post-title" type="text" class="validate">
                    <label for="post-title">Title</label>
                </div>
                <div class="input-field col s10 offset-s1">
                    <textarea id="post-content" class="materialize-textarea"></textarea>
                    <label for="post-content">Content</label>
                </div>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <a class='modal-close btn-flat'>Cancel</a>
        <a id='event-newPost' class='modal-close btn-flat'>Create</a>
    </div>
</div>